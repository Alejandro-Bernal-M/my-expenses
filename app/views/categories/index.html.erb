<h1>Categories</h1>
<%= link_to 'Sign out', destroy_user_session_path, data: {turbo_method: :delete} %>
<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "See records for this category", user_category_records_path(user_id: current_user.id, category_id:category.id) %>
      <%= link_to "Show this category", user_category_path(user_id: current_user.id, id: category.id) %>
    </p>
  <% end %>
</div>

<%= link_to "New category", new_user_category_path %>
<%= link_to "Back to user details", user_path(current_user) %>
