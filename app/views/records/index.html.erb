<h1>Records for <%= @category.name %> </h1>

<div id="records">
  <% if @records.any? %>
    <% @records.each do |record| %>
      <%= render record %>
      <p>
        <%= link_to "Show this record", user_category_record_path(user_id: current_user.id, category_id: record.category.id, id: record.id) %>
      </p>
    <% end %>
  <% else %>
    <p> You have no records yet. </p>
  <% end %>
</div>

<%= link_to "New record", new_user_category_record_path %>
<%= link_to 'Back to all the categories', user_categories_path %>
