<% if current_user%>
  <div class = 'popup'>
    <%= image_tag('close.png', class: 'close-popup') %>
    <p><%= current_user.name %></p>
    <div>
      <%= image_tag('settings.png', class: 'popup-image')%>
      <%= link_to 'My acount', user_path(current_user)  %>
    </div>
    <div>
      <%= image_tag('signout.png', class: 'popup-image')%>
      <%= link_to 'Sign out', destroy_user_session_path, data:{"turbo-method": :delete} %>
    </div>
  </div>
<% end %>