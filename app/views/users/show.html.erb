<p style="color: green"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= current_user.name %>
</p>

<p> Your categories: </p>
  <% if current_user.categories.any? %>
  <ul>
    <% current_user.categories.each do |category| %>
     <li> <%= category.name%> </li>
    <% end %>
  </ul>
  <% else %>
    <p> You have no categories yet. </p>
  <% end %>

<%= link_to 'Expand categories', user_categories_path(current_user) %>
<%= link_to 'Add a new category', new_user_category_path(user_id: current_user.id) %>

<div>
  <%= link_to "Edit this user", edit_user_registration_path(current_user) %> 
  <%= link_to 'Sign out', destroy_user_session_path, data: {turbo_method: :delete} %>
</div>
